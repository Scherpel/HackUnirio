<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssistenteSocial"
    android:orientation="vertical"
    android:background="@color/fundo"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/fundo"
        >
        <ImageView
            android:paddingTop="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/careone"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/preto"
            style="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Seja bem vindo ao SOS Assistente Social"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <EditText
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/email"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:background="@drawable/retangulo"
            android:backgroundTint="@color/caixa_cadastro"

            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:textColor="#000"
            />
        <EditText

            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/senha"
            android:layout_width="250dp"
             android:layout_height="50dp"
             android:hint="Senha"
             android:inputType="textPassword"
             android:background="@drawable/retangulo"
            android:backgroundTint="@color/caixa_cadastro"

             />

        <LinearLayout
            android:paddingBottom="180dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            >
            <Button
                android:id="@+id/botaoLogin"
                android:backgroundTint="@color/botao_cadastro"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/retangulo"
                android:textSize="10sp"
                android:text="Login"
                android:textColor="@color/preto"
                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="35dp" />
            <Button
                android:backgroundTint="@color/botao_cadastro"
                android:onClick="cadastro"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/retangulo"
                android:textSize="10sp"
                android:text="Cadastro"
                android:textColor="@color/preto"/>

        </LinearLayout>


 </LinearLayout>



</LinearLayout>